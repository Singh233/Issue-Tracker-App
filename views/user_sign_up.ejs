

<!-- User Sign up container -->

<div id="sign-up-container" class="user-sign-up remove animate__animated animate__faster">
    <div class="outline-effect">

        <div class="welcome-div">
            <img src="" alt="">
            <p>Enter Details to continue <i class="fa-solid fa-arrow-right"></i></p>
        </div>

        <!-- Sign Up Form -->
        <form action="/users/create" method="post">
            <div class="input-with-icon">
                <i class="fa-solid fa-user"></i>
                <input id="name-input" type="text" name="name" placeholder="Your name" required>
            </div>
            <div class="input-with-icon">
                <i class="fa-solid fa-envelope"></i>
                <input id="email-input" type="email" name="email" placeholder="Your Email" required>
            </div>

            <div class="input-with-icon">
                <i class="fa-solid fa-key"></i>
                <input  type="password" name="password" placeholder="Password" minlength="8"   required >
            </div>

            <div class="input-with-icon">
                <i class="fa-solid fa-key"></i>
                <input id="signup-pass-input" type="password" name="confirm_password" placeholder="Confirm Password" minlength="8"   required >
                <i class="fa-solid fa-eye animate__animated animate__faster" id="signup-toggle-password"></i>
            </div>
            
            <button id="submit-button" type="submit">
                Sign Up 
                <div class="arrow-wrapper">
                    <div class="arrow"></div>
                </div>
            </button>
        </form>

        <p class="option-text">Checkout other options</p>
        
        <!-- Other Sign Up Options -->
        <div class="auth-options">
            <a id="google-auth" href="/users/auth/google"><img src="<%= assetPath('img/icons8-google-48.png') %>" alt=""></a>
            <a id="fb-auth" href="/users/auth/facebook"><i class="fa-brands fa-facebook-f"></i></a>
            <a id="git-auth" href="/users/auth/github"><i class="fa-brands fa-github"></i></a>
        </div>

        <p class="option-text">Already have an account ? <a id="toggle-sign-up-page" href="#">Sign In <i class="fa-solid fa-arrow-right"></i></a></p>

    </div>
</div>



<script>
    const signUpTogglePassword = document.getElementById('signup-toggle-password');
    const signUpPassword = document.querySelector('#signup-pass-input');

    signUpTogglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type =
        signUpPassword.getAttribute('type') === 'password' ? 'text' : 'password';
        signUpPassword.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('animate__zoomIn');

        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
    });

</script>