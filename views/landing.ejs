<script>
    // on scroll make stars move
    window.addEventListener('scroll', function() {
        let stars = document.querySelectorAll('.star');
        let value = window.scrollY;
        stars.forEach(star => {
            star.style.transform = 'translateY(' + value * 0.5 + 'px)';
        })
    })

    const date = new Date();
    const ampm = date.getHours() >= 12 ? 'pm' : 'am';
    const hour = date.getHours();

    // greeting user
    const greetingUser = document.querySelector('.wish');

    if (hour >= 4 && hour < 12 && ampm === 'am') {
        greetingUser.innerHTML = 'Good Morning ,';
    } else if (hour >= 12 && hour <= 17 && ampm === 'pm') {
        greetingUser.innerHTML = 'Good Afternoon ,';
    } else if (hour >= 00 && hour <= 04 && ampm === 'am') {
        greetingUser.innerHTML = 'Welcome Night Owl ,';
    } else {
        greetingUser.textContent = 'Good Evening ,';
    }

    // show current time
    const time = document.querySelector('.time');
    time.innerHTML = `${hours12()}:${date.getMinutes() < 10 ? `0${date.getMinutes()}` : date.getMinutes()} ${ampm} IST`;

    function hours12() { return (date.getHours() + 24) % 12 || 12; }




    
    
</script>

