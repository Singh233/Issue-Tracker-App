
<!-- Forgot password in Container -->
<div id="forgot-password-container" class="forgot-password-container remove animate__animated animate__faster">
    <div class="outline-effect">
        <div class="welcome-div">
            <img src="" alt="">
            <p> Forgot Password,<span> No need to Worry! </span> </p>
        </div>
    
        <p style="text-align: center">We'll send an reset password link </p>
        <p style="text-align: center; margin-bottom: 25px;">to your verified email!</p>
    
        <!-- Sign In form -->
        <form action="/users/forgot-password" method="post">
            
            <!-- Email Input -->
            <div class="input-with-icon">
                <i class="fa-solid fa-envelope"></i>
                <input id="email-input" type="email" name="email" placeholder="Your Email" required>
            </div>
           
            <!-- Send reset password link button -->
            <button id="submit-button" type="submit">Send</button>
        </form>
    
        <p class="option-text">Checkout other Sign In options</p>
        
        <!-- Other Sign in Options -->
        <div class="auth-options">
            <a id="google-auth" href="/users/auth/google"><img src="/img/icons8-google-48.png" alt=""></a>
            <a id="fb-auth" href="/users/auth/facebook"><i class="fa-brands fa-facebook-f"></i></a>
            <a id="git-auth" href="/users/auth/github"><i class="fa-brands fa-github"></i></a>
        </div>
    
        <p class="option-text"><a id="toggle-back-page" href="#"> <i class="fa-solid fa-arrow-left"></i> Go back </a></p>
    </div>
    


