<!-- User Sign up container -->
<div id="" class="reset-password-container animate__animated animate__faster">
    <div class="welcome-div">
        <img src="" alt="" />
        <p>Reset your password <i class="fa-solid fa-arrow-right"></i></p>
    </div>

    <!-- Sign Up Form -->
    <form
        action="/users/password-reset/<%= userId %>/<%= token %>"
        method="post"
    >
        <div class="input-with-icon">
            <i class="fa-solid fa-key"></i>
            <input
                id="pass-input"
                type="password"
                name="password"
                placeholder="Password"
                minlength="8"
                required
            />
            <i class="fa-solid fa-eye" id="toggle-password"></i>
        </div>

        <div class="input-with-icon">
            <i class="fa-solid fa-key"></i>
            <input
                class="pass-input2"
                id="pass-input"
                type="password"
                name="confirm_password"
                placeholder="Confirm Password"
                minlength="8"
                required
            />
            <i
                class="fa-solid fa-eye animate__animated animate__faster toggle-password2"
                id="toggle-password"
            ></i>
        </div>

        <button id="submit-button" type="submit">Confirm</button>
    </form>
</div>

<script>
    const togglePassword = document.getElementById('toggle-password');
    const password = document.querySelector('#pass-input');

    togglePassword.addEventListener('click', function (e) {
        console.log('clicked');
        // toggle the type attribute
        const type =
            password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('animate__zoomIn');

        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
    });

    const togglePassword2 = document.getElementsByClassName('toggle-password2')[0];
    const password2 = document.querySelector('.pass-input2');

    togglePassword2.addEventListener('click', function (e) {
        console.log('clicked');
        // toggle the type attribute
        const type =
        password2.getAttribute('type') === 'password' ? 'text' : 'password';
        password2.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('animate__zoomIn');

        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
    });
</script>
