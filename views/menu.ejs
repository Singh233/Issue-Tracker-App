    <i onclick="closeMenu()" class="fa-solid fa-xmark close-button"></i>

    <div class="user-info">
        <div class="avatar">
            <img src="<%= locals.user.avatar %>" alt="avatar" />
        </div>
        <div class="name"><%= locals.user.name %></div>
        <div class="email"> <%= locals.user.email %></div>
    </div>

    <div class="sm-nav">
